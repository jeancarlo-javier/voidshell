{
  "name": "voidshell",
  "version": "0.1.3",
  "description": "VoidShell â€“ minimal terminal React component as a reusable package.",
  "license": "MIT",
  "type": "module",
  "main": "./dist/voidshell.cjs.js",
  "module": "./dist/voidshell.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/voidshell.es.js",
      "require": "./dist/voidshell.cjs.js"
    },
    "./styles.css": "./dist/voidshell.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "devDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.17",
    "typescript": "^5.5.0",
    "vite": "^5.4.0",
    "@vitejs/plugin-react": "^4.3.0",
    "vite-plugin-dts": "^4.2.3",
    "vitest": "^1.6.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@testing-library/jest-dom": "^6.4.8",
    "jsdom": "^24.1.0"
  },
  "scripts": {
    "dev": "vite",
    "build:lib": "vite build && npm run copy:css",
    "build:demo": "vite build --config vite.demo.config.ts",
    "build": "npm run build:lib && npm run copy:css && npm run build:demo",
    "copy:css": "cp src/voidshell.css dist/voidshell.css",
    "preview": "vite preview --config vite.demo.config.ts --outDir demo-dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage"
  }
}
